<xsd:element name="Hotels">
  <xsd:complexType>
    <xsd:sequence>
      <!-- Repeat the Hotel element as many times as needed -->
      <xsd:element name="Hotel" maxOccurs="unbounded">
        <xsd:complexType>
          <xsd:sequence>
            <!-- 1. Name -->
            <xsd:element name="Name" type="xsd:string" />
            
            <!-- 2. Phone repeated: minOccurs=1, maxOccurs=unbounded -->
            <xsd:element name="Phone" type="xsd:string"
                         minOccurs="1"
                         maxOccurs="unbounded" />

            <!-- 3. Address -->
            <xsd:element name="Address">
              <xsd:complexType>
                <xsd:sequence>
                  <!-- Make Number and Zip int -->
                  <xsd:element name="Number" type="xsd:int" />
                  <xsd:element name="Street" type="xsd:string" />
                  <xsd:element name="City" type="xsd:string" />
                  <xsd:element name="State" type="xsd:string" />
                  <xsd:element name="Zip" type="xsd:int" />
                </xsd:sequence>
                <xsd:attribute name="_NearestAirport" type="xsd:string"
                               use="optional" />
              </xsd:complexType>
            </xsd:element>
          </xsd:sequence>
          <xsd:attribute name="_Rating" type="xsd:string"
                         use="optional" />
        </xsd:complexType>
      </xsd:element>
    </xsd:sequence>
  </xsd:complexType>
</xsd:element>
